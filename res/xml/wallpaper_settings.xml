<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/wallpaper_settings"
        android:key="wallpaper_settings">
        <ListPreference
        		android:title="@string/androidColorTitle"
        		android:persistent="true"
        		android:summary="@string/androidColorDescription"
        		android:key="colorPref"
        		android:defaultValue="android.png"
        		android:entries="@array/androidTypeArray"
        		android:entryValues="@array/androidTypeValues">
        </ListPreference>
		<PreferenceCategory
        	android:title="@string/creditTitle">
		<Preference
                android:title="@string/thanksTitle"
                android:summary="@string/thanksDescription"
                android:key="thanksPref"/></PreferenceCategory>
</PreferenceScreen>
